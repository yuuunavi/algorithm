#include <iostream>
using namespace std;

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL); cout.tie(NULL);

    int n, a, b;
    cin >> n;
    while(n>0){
        cin >> a >> b;
        cout << "You get " << a/b << " piece(s) and your dad gets " << a%b << " piece(s)." << endl;
        n--;
    }
    return 0;
}
