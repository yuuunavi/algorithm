#include <iostream>
using namespace std;

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL); cout.tie(NULL);

    int n;
    cin >> n;
    int x = 1;
    for(int i=n; i>0; i--){
        for(int j=i; j>1; j--){
            cout << " ";
        }
        for(int k=0; k<x; k++){
            cout << "* ";
        }
        cout << endl;
        x++;
    }
    return 0;
}
