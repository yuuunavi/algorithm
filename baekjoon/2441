#include <iostream>
using namespace std;

int main() {
	ios_base::sync_with_stdio(false);
	cin.tie(NULL); cout.tie(NULL);
	
	int n;
	int t = 0;
	cin >> n;

	while (n > 0) {
		for (int i = 0; i < t; i++) {
			cout << " ";
		}
		for (int i = n; i > 0; i--) {
			cout << "*";
		}
		cout << endl;
		n--; t++;
	}
	return 0;
}
